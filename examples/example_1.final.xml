<?xml version="1.0"?>
<?xml-stylesheet href="../xml/style.css"?>
<EasyLexML>
	<metadata>
		<title>
			Example 1
		</title>
		<author>
			gjvnq
		</author>
	</metadata>
	<abstract>
		 Just a simple example of EasyLexML. 
	</abstract>
	<corpus>
		<cls label-style="({})">
			<p>
				<label/>
				Rule 0 (
				<b>
					see custom label style)
				</b>
				)
			</p>
		</cls>
		<sec title="Introduction">
			<cls>
				<p>
					<label/>
					Rule 1
				</p>
			</cls>
			<sec title="Sub-Intro">
				<cls>
					<p>
						<label/>
						Rule 
						<a href="https://en.wikipedia.org/wiki/2">
							2
						</a>
					</p>
					<sub>
						<p>
							<label/>
							Exception 1
						</p>
					</sub>
					<note>
						I'm just an explanatory note.
					</note>
					<sub>
						<p>
							<label/>
							Exception 2 
						</p>
						<sub>
							<p>
								<label/>
								Exception of the exception (1)
							</p>
						</sub>
						<sub>
							<p>
								<label/>
								Exception of the exception (2)
							</p>
						</sub>
					</sub>
				</cls>
			</sec>
		</sec>
		<set key="ClsCounter" val="0"/>
		<sec title="Final">
			<cls>
				<p>
					<label/>
					 Final Rule 
				</p>
				<sub num="1">
					<p>
						<label/>
						 Exception 1 
					</p>
				</sub>
				<sub>
					<p>
						<label/>
						 Exception 3 (we added it latter) 
					</p>
				</sub>
				<sub num="2">
					<p>
						<label/>
						 Exception 2 
					</p>
				</sub>
			</cls>
		</sec>
	</corpus>
</EasyLexML>
