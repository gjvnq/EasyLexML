<?xml version="1.0"?>
<?xml-stylesheet href="../xml/style.css"?>
<EasyLexML>
	<metadata>
		<title>
			Example 1
		</title>
		<author>
			gjvnq
		</author>
	</metadata>
	<abstract>
		 Just a simple example of EasyLexML. 
	</abstract>
	<corpus id="corpus">
		<cls label-style="({})" lexid="cls1">
			<p lexid="cls1_p1">
				<label lexid="cls1_p1_label1">
					Cls. {num}
				</label>
				Rule 0 (
				<b lexid="cls1_p1_b1">
					see custom label style)
				</b>
				)
			</p>
		</cls>
		<sec title="Introduction" lexid="sec1">
			<cls lexid="sec1_cls1">
				<p lexid="sec1_cls1_p1">
					<label lexid="sec1_cls1_p1_label1">
						Cls. {num}
					</label>
					Rule 1
				</p>
			</cls>
			<sec title="Sub-Intro" lexid="sec1_sec1">
				<cls lexid="sec1_sec1_cls1">
					<p lexid="sec1_sec1_cls1_p1">
						<label lexid="sec1_sec1_cls1_p1_label1">
							Cls. {num}
						</label>
						Rule 
						<a href="https://en.wikipedia.org/wiki/2" lexid="sec1_sec1_cls1_p1_a1">
							2
						</a>
					</p>
					<sub lexid="sec1_sec1_cls1_sub1">
						<p lexid="sec1_sec1_cls1_sub1_p1">
							<label lexid="sec1_sec1_cls1_sub1_p1_label1">
								{num})
							</label>
							Exception 1
						</p>
					</sub>
					<note lexid="sec1_sec1_cls1_note1">
						I'm just an explanatory note.
					</note>
					<sub lexid="sec1_sec1_cls1_sub2">
						<p lexid="sec1_sec1_cls1_sub2_p1">
							<label lexid="sec1_sec1_cls1_sub2_p1_label1">
								{num})
							</label>
							Exception 2 
						</p>
						<sub lexid="sec1_sec1_cls1_sub2_sub1">
							<p lexid="sec1_sec1_cls1_sub2_sub1_p1">
								<label lexid="sec1_sec1_cls1_sub2_sub1_p1_label1">
									{num})
								</label>
								Exception of the exception (1)
							</p>
						</sub>
						<sub lexid="sec1_sec1_cls1_sub2_sub2">
							<p lexid="sec1_sec1_cls1_sub2_sub2_p1">
								<label lexid="sec1_sec1_cls1_sub2_sub2_p1_label1">
									{num})
								</label>
								Exception of the exception (2)
							</p>
						</sub>
					</sub>
				</cls>
			</sec>
		</sec>
		<set key="ClsCounter" val="0" lexid="set1"/>
		<sec title="Final" lexid="sec2">
			<cls lexid="sec2_cls1">
				<p lexid="sec2_cls1_p1">
					<label lexid="sec2_cls1_p1_label1">
						Cls. {num}
					</label>
					 Final Rule 
				</p>
				<sub num="1" lexid="sec2_cls1_sub1">
					<p lexid="sec2_cls1_sub1_p1">
						<label lexid="sec2_cls1_sub1_p1_label1">
							{num})
						</label>
						 Exception 1 
					</p>
				</sub>
				<sub lexid="sec2_cls1_sub2">
					<p lexid="sec2_cls1_sub2_p1">
						<label lexid="sec2_cls1_sub2_p1_label1">
							{num})
						</label>
						 Exception 3 (we added it latter) 
					</p>
				</sub>
				<sub num="2" lexid="sec2_cls1_sub3">
					<p lexid="sec2_cls1_sub3_p1">
						<label lexid="sec2_cls1_sub3_p1_label1">
							{num})
						</label>
						 Exception 2 
					</p>
				</sub>
			</cls>
		</sec>
	</corpus>
</EasyLexML>
